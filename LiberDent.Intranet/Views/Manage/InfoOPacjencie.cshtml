@model LiberDent.Intranet.Models.Account.ManageViewModel.InfoOPacjecieViewModel
@{
    ViewData["Title"] = "Info O Pacjencie";
    Layout = "~/Views/Manage/_Layout.cshtml";
}

<h6>Informacje o pacjencie</h6>
<div class="row">
    <div class="col-md-6">
        <form asp-action="ZapiszInfoOPacjencie" asp-route-wiz="@Model.Wizyta.IdUmowioneWizyty">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pacjent.Dane.Imie"></label>
                <input asp-for="Pacjent.Dane.Imie" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Pacjent.Dane.Nazwisko"></label>
                <input asp-for="Pacjent.Dane.Nazwisko" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Pacjent.Dane.DataUrodzenia"></label>
                <input type="date" asp-for="Pacjent.Dane.DataUrodzenia" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Pacjent.Email"></label>
                <input asp-for="Pacjent.Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label>Numer telefonu</label>
                <input asp-for="Pacjent.PhoneNumber" class="form-control" disabled />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" name="id" asp-for="Wizyta.CzyPacjentByl" /> @Html.DisplayNameFor(model => model.Wizyta.CzyPacjentByl)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>
