@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@using LiberDent.Data.Data.Account
@model LiberDent.Intranet.Models.Account.AccountViewModel.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Logowanie";
}


<div class="col m12 text-center" style="align-content:center;max-width:300px; width:33.33333333%; margin-left:33.333333333%">
        <h4>@ViewData["Title"]</h4>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h6>Zaloguj się do swojego konta</h6>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" id="buttonExternalLogin" class="btn btn-outline-success">Zaloguj się</button>
                </div>
                @*<div class="form-group">
                    <p>
                        <a asp-action="ForgotPassword">Zapomnialeś hasło?</a>
                    </p>
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Zarejestruj się jako nowy użytkownik</a>
                    </p>
                </div>*@
            </form>
    </div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}