@model LiberDent.Intranet.Models.Account.AccountViewModel.RegisterViewModel
@using LiberDent.Data.Data.Slownikowe

@{
    ViewData["Title"] = "Rejestracja";
    
}
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col m12">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            @*<div class="col m3">*@
            <h6>Stwórz nowe konto.</h6>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            @*<div class="form-group">
                    <label asp-for="DaneUzytkownika.UserName"></label>
                    <input asp-for="DaneUzytkownika.UserName" class="form-control" />
                    <span asp-validation-for="DaneUzytkownika.UserName" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dane.IdTytulNaukowy" class="control-label"></label>
                <select asp-for="Dane.IdTytulNaukowy" class="form-control">
                    @{
                        foreach (var item in Model.TytulNaukowy)
                        {
                            <option value="@item.IdTytulNaukowy">@item.Nazwa</option>
                        }
                    }
                </select>
                <span asp-validation-for="Dane.IdTytulNaukowy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dane.IdStanowiska" class="control-label"></label>
                <select asp-for="Dane.IdStanowiska" class="form-control">
                    @{
                        foreach (var item in Model.Stanowiska)
                        {
                            <option value="@item.IdStanowiska">@item.Nazwa</option>
                        }
                    }
                </select>
                <span asp-validation-for="Dane.IdTytulNaukowy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPoziomUprawnien" class="control-label"></label>
                <select asp-for="IdPoziomUprawnien" class="form-control">
                    @{
                        foreach (var item in Model.PoziomUprawnienLista)
                        {
                            <option value="@item.IdPoziomUprawnien">@item.NumerUprawnien</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdPoziomUprawnien" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-success">Zarejestruj</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
