@using LiberDent.PortalWWW.Views.Manage
@model LiberDent.PortalWWW.Models.ManageViewModel.DaneUzytkownikaViewModel
@{
    ViewData["Title"] = "Moje dane osobowe";
    ViewData.AddActivePage(ManageNavPages.DaneUzytkownika);
}

<h6 class="title">@ViewData["Title"]</h6>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col m12">
        <section>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group fontStyle">
                    <label asp-for="Dane.Imie"></label>
                    <input asp-for="Dane.Imie" class="form-control" />
                    <span asp-validation-for="Dane.Imie" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dane.Nazwisko"></label>
                    <input asp-for="Dane.Nazwisko" class="form-control" />
                    <span asp-validation-for="Dane.Nazwisko" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dane.DataUrodzenia"></label>
                    <input type="date" asp-for="Dane.DataUrodzenia" class="form-control" />
                    <span asp-validation-for="Dane.DataUrodzenia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dane.NumerPESEL"></label>
                    <input asp-for="Dane.NumerPESEL" class="form-control" />
                    <span asp-validation-for="Dane.NumerPESEL" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-flat light-blue lighten-1">Zapisz zmiany</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}