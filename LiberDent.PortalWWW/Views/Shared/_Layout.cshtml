<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projekt.PortalWWW</title>
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/StylePortal.css" />
    <!-- CSS  -->
    @*<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">*@
    @*<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />*@
    <link href="~/lib/materialize/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/lib/materialize/css/materialize.min.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <script src="http://code.jquery.com/jquery-2.2.2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        body {
            font-size: x-small;
        }
    </style>

</head>
<body>
    @{int mount = DateTime.Now.Month; }
    <header class="container-fluid light-blue lighten-1">
        <a id="logo-container" asp-area="" asp-controller="Home" asp-action="Index" class="brand-logo"><img src="~/image/Logo1Projekt.png" /></a>
        <nav class="light-blue lighten-1" role="navigation">

            <div class="nav-wrapper container-fluid marginBottom">

                <ul class="right hide-on-med-and-down">
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ONas">O nas</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Personel">Personel</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cennik">Cennik</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="UmowWizyte" asp-route-str="">Umów wizytę</a></li>
                    @await Html.PartialAsync("_LoginPartial")
                </ul>

                <ul id="slide-out" class="sidenav">
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ONas">O nas</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Personel">Personel</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cennik">Cennik</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="UmowWizyte" asp-route-str="">Umów wizytę</a></li>
                    @await Html.PartialAsync("_LoginPartial")
                </ul>
                <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">Menu</i></a>
                
                </div>
</nav>
    </header>
    <div class="header-image">
        <img class="responsive-img" src="~/image/Img1Projekt.jpg" alt="LIBER-DENT">
    </div>
    <div class="container-fluid">
        <div class="section no-pad-top">
            <div class="row">
                <div class="col m9" id="glownaLewa">
                    @RenderBody()
                </div>
                @if (ViewBag.ModelKontaktGlowny != null)
                {
                    <div class="col m3 no-pad-right">
                        <aside class="materialize-textarea" role="complementary">
                            @await Html.PartialAsync("_KontaktGlowna", (IEnumerable<LiberDent.Data.Data.CMS.Kontakt>)ViewBag.ModelKontaktGlowny)

                            @await Html.PartialAsync("_GodzinyOtwarcia", (IEnumerable<LiberDent.Data.Data.CMS.GodzinyOtwarcia>)ViewBag.ModelGodzinyOtwarcia)
                        </aside>
                    </div>
                }
            </div>
        </div>
        <br><br>
    </div>
    <footer class="page-footer grey darken-3">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h6 class="white-text">LIBER-DENT – Prywatna praktyka stomatologiczna</h6>
                    <p class="grey-text text-lighten-4">
                        Krzysztof Liber <br />
                        Lekarz dentysta <br /><br />
                        Ptaszkowa 633<br />
                        33-333 Ptaszkowa<br />
                    </p>
                </div>
            </div>
        </div>
        <div class="footer-copyright grey darken-1">
            <div class="container">
                Made by <a class="white-text text-lighten-3">Dariusz Duda</a>
            </div>
        </div>
    </footer>
    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/lib/materialize/js/materialize.js"></script>
    <script src="~/lib/materialize/js/materialize.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/materialize/js/MojeSkrypty.js"></script>
    <script>
        $(document).ready(function () {
            $('#menu-button').click(function () {
                $('#slide-out').stop().slideToggle(300);
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
