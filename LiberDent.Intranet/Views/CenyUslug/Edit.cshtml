@model LiberDent.Data.Data.CMS.CenyUslug

@{
    ViewData["Title"] = "Edytuj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h6>Edytuj</h6>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCenyUslug" />
            <div class="form-group">
                <label asp-for="NazwaUslugi" class="control-label"></label>
                <input asp-for="NazwaUslugi" class="form-control" />
                <span asp-validation-for="NazwaUslugi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CenaUslugi" class="control-label"></label>
                <input asp-for="CenaUslugi" class="form-control" />
                <span asp-validation-for="CenaUslugi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary" asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
