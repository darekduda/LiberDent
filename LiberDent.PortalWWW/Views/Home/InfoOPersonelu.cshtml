@model LiberDent.PortalWWW.Models.HomeViewModel.InfoOPersoneluViewModel
@using LiberDent.PortalWWW.Models.HomeViewModel
@{
    ViewData["Title"] = "Personel info";
    UmowWizyteViewModel stworzModel(string str)
    {
        return new UmowWizyteViewModel
        {
            WybranyDzien = DateTime.Now,
            IdLekarza = str
        };
    }
}
<h5>Nasz personel - info</h5>
<div class="card">
    <div class="card-content light-blue lighten-1">
       @Model.DaneUser.Dane.Imie @Model.DaneUser.Dane.Nazwisko
    </div>
    <div class="row">
        <div class="col l12 s12 m12">
            <div class="col l3 m3 s12">
                <div class="row">
                    <div class="col l12 s12 m12">
                        <div class="card-content">
                            <img src="https://wsb-nlu.clouda.edu.pl/Content/pliki/DanePracownik/439BeautyPlus_20200407183535374_save.jpg" style="width:200px" />
                        </div>
                        <div class="card-content">
                            @Model.DaneUser.DaneLekarza.TytulNaukowy.Nazwa @Model.DaneUser.Dane.Imie @Model.DaneUser.Dane.Nazwisko
                        </div>
                    </div>
                </div>

            </div>
            <div class="col l9 s9 m12">
                <div class="card-content">
                    <div class="row">
                        Stanowisko: @Model.DaneUser.DaneLekarza.Stanowiska.Nazwa
                    </div>

                    @Model.DaneUser.DaneLekarza.Opis
                </div>
            </div>
            @{
                if (Model.DaneUser.DaneLekarza.Stanowiska.CzyStomatolog == true)
                {
                    <div class="col l12 s12 m12">
                        <div class="row right right-align right-aligned" style="margin-right:auto">
                            <a class="btn " asp-controller="Home" asp-action="WizytaLekarz" asp-route-id="@Model.DaneUser.Id" >Umow wizytę do tego lekarza!</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>