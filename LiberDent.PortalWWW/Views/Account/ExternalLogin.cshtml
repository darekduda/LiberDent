@model LiberDent.PortalWWW.Models.AccountViewModel.ExternalLoginViewModel
@{
    ViewData["Title"] = "Rejestracja";
}

<h4>@ViewData["Title"]</h4>
<h6>Powiązano twoje konto @ViewData["LoginProvider"] .</h6>
<hr />

<p class="text-info">
    Pomyślnie zalogowano za pomocą <strong>@ViewData["LoginProvider"]</strong>.

    Proszę podać adres email jaki zostanie dopisany do konta i kliknąć Zarejestruj.
                                   <span>
                                       <br />
                                       Imię i nazwisko : @Model.Name
                                       @*
        <br/>
        Data urodzenia: @String.Format("{0:dddd, MMMM d, yyyy", Convert.ToDateTime(Model.DOB))*@

                                   </span>
<br/>

<div class="row">
    <div class="col m12">
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dane.Imie"></label>
                <input asp-for="Dane.Imie" class="form-control" />
                <span asp-validation-for="Dane.Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dane.Nazwisko"></label>
                <input asp-for="Dane.Nazwisko" class="form-control" />
                <span asp-validation-for="Dane.Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dane.DataUrodzenia"></label>
                <input asp-for="Dane.DataUrodzenia" class="form-control" />
                <span asp-validation-for="Dane.DataUrodzenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dane.NumerPESEL"></label>
                <input asp-for="Dane.NumerPESEL" class="form-control" />
                <span asp-validation-for="Dane.NumerPESEL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres.Miejscowosc"></label>
                <input asp-for="Adres.Miejscowosc" class="form-control" />
                <span asp-validation-for="Adres.Miejscowosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres.Ulica"></label>
                <input asp-for="Adres.Ulica" class="form-control" />
                <span asp-validation-for="Adres.Ulica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres.NumerDomu"></label>
                <input asp-for="Adres.NumerDomu" class="form-control" />
                <span asp-validation-for="Adres.NumerDomu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres.NumerLokalu"></label>
                <input asp-for="Adres.NumerLokalu" class="form-control" />
                <span asp-validation-for="Adres.NumerLokalu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres.KodPocztowy"></label>
                <input asp-for="Adres.KodPocztowy" class="form-control" />
                <span asp-validation-for="Adres.KodPocztowy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres.Poczta"></label>
                <input asp-for="Adres.Poczta" class="form-control" />
                <span asp-validation-for="Adres.Poczta" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-flat light-blue lighten-1">Zarejestruj</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}